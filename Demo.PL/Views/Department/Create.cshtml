@model CreatedDepartmentDto

@{
    ViewData["Title"] = "Create Department";
}


<div class="row justify-content-center align-items-center flex-column">

    <h1 class="col-8 my-3">Create New Department</h1>
    <form asp-action="Create" class="col-8">
    <div class="form-group mb-3">
            <label class="form-lable mb-2" asp-for="Code"></label>
            <input asp-for="Code" class="form-control mb-3" />
            <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
            <label class="form-lable mb-2" asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-3" />
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
            <label class="form-lable mb-2" asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control mb-3"></textarea>
    </div>
    <div class="form-group mb-3">
            <label class="form-lable mb-2" asp-for="CreationDate"></label>
            <input type="date" asp-for="CreationDate" class="form-control mb-3" />
    </div>

    <div class="my-4">
        <input type="submit" value="Create" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>

</div>




@section ValidationScripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}