@model DepartmentEditViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center align-items-center flex-column">

    <h1 class="col-8 my-3">Edit Department</h1>
    <form asp-action="Edit" class="col-8">
        <div class="form-group mb-3">
            <label class="form-lable" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-lable" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-lable" asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-lable" asp-for="CreationDate"></label>
            <input type="date" asp-for="CreationDate" class="form-control" />
        </div>

        <div class="my-4">
            <input type="submit" value="Save" class="btn btn-success" /> |
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </form>

</div>

@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
