@model RoleViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.RoleName Details</h1>


<div class="row">
    <div class="form-group my-2">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class="form-control" asp-for="Id" />
    </div>
    <div class="form-group my-2">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input readonly class="form-control" asp-for="RoleName" />
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</div>

