@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">
			<div asp-validation-summary="ModelOnly"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger my-1"></span>
			<input class="text mb" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger my-1"></span>
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>If You Have An Acount. <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>


@section ValidationScripts{
	<partial name="_ValidationScriptsPartial" />
}

