@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Fname @Model.LName User Edit</h1>


<form asp-action="Edit">
    <div class="row">
        <div class="form-group my-2">
            <label class="col-form-label" asp-for="Fname"></label>
            <input class="form-control" asp-for="Fname" />
        </div>
        <div class="form-group my-2">
            <label class="col-form-label" asp-for="LName"></label>
            <input class="form-control" asp-for="LName" />
        </div>
        <div class="form-group my-2">
            <label class="col-form-label" asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" />
        </div>
        <div class="mt-4">
            <input type="submit" value="Save" class="btn btn-success" /> |
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </div>
</form>

