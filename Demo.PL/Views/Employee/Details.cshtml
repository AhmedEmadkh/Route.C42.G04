@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-3">Employee Details</h1>

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" aria-controls="general" href="#general" data-bs-toggle="tab" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" aria-controls="administration" href="#administration" data-bs-toggle="tab" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="Name"></label>
                <input asp-for="Name" class="form-control mb-3" disabled/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="Email"></label>
                <input asp-for="Email" class="form-control mb-3" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="Address"></label>
                <input asp-for="Address" class="form-control mb-3" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="Age"></label>
                <input asp-for="Age" class="form-control mb-3" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control mb-3" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control mb-3" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable mb-2" asp-for="Department"></label>
                <input asp-for="Department" class="form-control mb-3" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="control-lable mb-2" asp-for="EmployeeType"></label>
                <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                    <option value="">Select Employee Type</option>
                </select>
            </div>
            <div class="form-group col-6 mb-3">
                <label class="form-lable" asp-for="HiringDate"></label>
                <input type="date" asp-for="HiringDate" class="form-control" disabled />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="control-lable mb-2 me-2" asp-for="Gender"></label><br />
                @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
                {
                    <label class="radio-inline">
                        <input type="radio" asp-for="Gender" value="@genderOption" disabled />
                        @genderOption
                    </label>

                    <br />
                }
            </div>
            <div class="form-check col-12 mb-3">
                <input asp-for="IsActive" class="form-check-input" disabled />
                <label class="form-check-lable mb-2" asp-for="IsActive"></label>
            </div>
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" disabled />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" disabled />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" disabled />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</div>




