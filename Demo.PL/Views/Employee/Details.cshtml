@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-3">Employee Details</h1>

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" aria-controls="general" href="#general" data-bs-toggle="tab" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" aria-controls="administration" href="#administration" data-bs-toggle="tab" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group mb-3">
                <label class="form-lable mb-2" asp-for="Name"></label>
                <input asp-for="Name" class="form-control mb-3" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-lable mb-2" asp-for="Email"></label>
                <input asp-for="Email" class="form-control mb-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-lable mb-2" asp-for="Address"></label>
                <input asp-for="Address" class="form-control mb-3" readonly />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-lable mb-2" asp-for="Age"></label>
                <input asp-for="Age" class="form-control mb-3" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-lable mb-2" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control mb-3" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-lable mb-2" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control mb-3" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="Gender" class="form-control" />
                <label class="form-lable mb-2" asp-for="Gender"></label>
            </div>
            <div class="form-group mb-3">
                <input asp-for="EmployeeType" class="form-control" />
                <label class="form-lable mb-2" asp-for="EmployeeType"></label>
            </div>
            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-lable mb-2" asp-for="IsActive"></label>
            </div>
            <div class="form-group mb-3">
                <label class="form-lable" asp-for="HiringDate"></label>
                <input type="date" asp-for="HiringDate" class="form-control" />
            </div>
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</div>




